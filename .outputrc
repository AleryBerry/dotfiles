todate=$(echo `date +%s` / 3600 | bc -l)
isDateCreated=false

if [ -f ~/.date ]; then
    olddate=`head -1 .date`
    n1=$(($todate-$olddate))
    n2=6
    if [[ $(bc -l <<< "$n1 > $n2") -eq 1 ]]; then
        sysfex --ascii-path /opt/sysfex/ascii/arch.txt > ~/.sysfex
        tstock xmr --pady 2 --padx 2 -t 'day' -b 40 -a 'crypto' -y 20 > ~/.tstock
        echo $(echo `date +%s` / 3600 | bc -l) > ~/.date
        isDateCreated=true
    fi  
else
    echo $(echo `date +%s` / 3600 | bc -l) > ~/.date
    sysfex --ascii-path /opt/sysfex/ascii/arch.txt > /tmp/.sysfex
    tstock xmr --pady 2 --padx 2 -t 'day' -b 40 -a 'crypto' -y 20 > ~/.tstock
    isDateCreated=true
fi

paste <(cat ~/.sysfex) <(cat ~/.tstock) | column -s $'\t' -t

if [ "$isDateCreated" = true ]; then
    echo "New Date Created."
fi
